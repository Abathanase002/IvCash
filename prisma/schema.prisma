// Prisma schema for Ashesi Student Loans - MongoDB

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  student
  admin
  super_admin
  investor
}

enum LoanStatus {
  pending
  approved
  rejected
  disbursed
  repaying
  completed
  defaulted
}

enum TransactionType {
  disbursement
  repayment
  fee
  refund
}

enum AppointmentStatus {
  pending
  confirmed
  completed
  cancelled
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  password      String
  firstName     String
  lastName      String
  phone         String?
  profileImage  String?
  role          UserRole  @default(student)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  student       Student?
  transactions  Transaction[]
}

model Student {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  userId             String   @unique @db.ObjectId
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  universityName     String   @default("Ashesi University")
  studentId          String
  program            String
  yearOfStudy        Int
  expectedGraduation DateTime
  
  hostelName         String?
  roomNumber         String?
  
  nationalId         String?
  dateOfBirth        DateTime?
  address            String?
  
  trustScore         Float    @default(50)
  isEligible         Boolean  @default(true)
  maxLoanAmount      Float    @default(100000)
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  loans              Loan[]
  appointments       Appointment[]
}


model Loan {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  studentId       String     @db.ObjectId
  student         Student    @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  amount          Float
  purpose         String
  duration        Int
  interestRate    Float      @default(5)
  platformFee     Float      @default(5)
  
  totalRepayment  Float
  monthlyPayment  Float
  
  status          LoanStatus @default(pending)
  
  requestedAt     DateTime   @default(now())
  approvedAt      DateTime?
  disbursedAt     DateTime?
  dueDate         DateTime?
  completedAt     DateTime?
  
  approvedBy      String?
  rejectionReason String?
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  repayments      Repayment[]
  transactions    Transaction[]
}

model Repayment {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  loanId        String   @db.ObjectId
  loan          Loan     @relation(fields: [loanId], references: [id], onDelete: Cascade)
  
  amount        Float
  paymentMethod String
  reference     String?
  
  paidAt        DateTime @default(now())
  createdAt     DateTime @default(now())
}

model Transaction {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  loanId      String?         @db.ObjectId
  loan        Loan?           @relation(fields: [loanId], references: [id])
  userId      String?         @db.ObjectId
  user        User?           @relation(fields: [userId], references: [id])
  
  type        TransactionType
  amount      Float
  description String
  reference   String?
  
  createdAt   DateTime        @default(now())
}

model Appointment {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  studentId   String            @db.ObjectId
  student     Student           @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  title       String
  description String?
  date        DateTime
  time        String
  location    String            @default("Ashesi University - Admin Office")
  status      AppointmentStatus @default(pending)
  
  notes       String?
  createdBy   String
  
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}
